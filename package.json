{
  "name": "kanva-smart-contracts",
  "version": "1.0.0",
  "description": "The smart contracts for Kanva application",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "truffle test",
    "compile": "truffle compile",
    "migrate": "truffle migrate",
    "ganache": "ganache-cli --gas-price 0",
    "deploy:dev": "truffle deploy --network development --reset",
    "deploy:mainnet": "truffle deploy --network mainnet --reset",
    "deploy:ropsten": "truffle deploy --network ropsten --reset",
    "deploy:rinkeby": "truffle deploy --network rinkeby --reset",
    "deploy:kovan": "truffle deploy --network kovan --reset",
    "flat": "truffle-flattener contracts/staking/StakingFactory.sol > flat/StakingFactory.sol && truffle-flattener contracts/kanva/KanvaToken.sol > flat/KanvaToken.sol && truffle-flattener contracts/kanva/KanvaLtd.sol > flat/KanvaLtd.sol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Araton95/kanva-contracts.git"
  },
  "keywords": [
    "smart",
    "contracts",
    "ethereum",
    "solidity",
    "transactions",
    "nft",
    "erc721",
    "farming",
    "erc20",
    "ethereum",
    "tokens",
    "contract"
  ],
  "author": "Ararat Tonoyan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Araton95/kanva-contracts/issues"
  },
  "homepage": "https://github.com/Araton95/kanva-contracts#readme",
  "dependencies": {
    "@openzeppelin/contracts": "^2.5.0",
    "@openzeppelin/test-environment": "^0.1.4",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@truffle/hdwallet-provider": "^1.0.43",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "ganache-cli": "^6.10.1",
    "truffle": "^5.1.40",
    "truffle-flattener": "^1.4.4"
  }
}
